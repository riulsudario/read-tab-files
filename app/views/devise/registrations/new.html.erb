<div class="register-container">
  <%= render partial: "./components/navbar" %>

  <div class="register-form-container">
    <%= form_with url: user_registration_path, method: :post, remote: false, class: "form", local: true do |f| %>
      <div class="field">
        <%= f.label :password, "Name", class: "label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input name", required: true %>
      </div>

      <div class="field">
        <%= f.label :emails, "Email", class: "label" %>
        <%= f.email_field :email, autocomplete: "email", class: "input", required: true %>
      </div>

      <div class="field">
        <%= f.label :password, "New password", class: "label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input", required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm password", class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", required: true %>
      </div>

      <div class="buttons">
        <%= tag.a "Have an account?", class: "links", href: new_user_session_path %>
        <%= f.submit "Submit", class: "submit-button" %>
      </div>
    <% end %>

    <hr class="separator">

    <div class="omni-auth">
        <%= form_tag(user_facebook_omniauth_authorize_path, class: "facebook", method: :post) do %>
          <button class="facebook-button" type="submit">Continue with Facebook</button>
        <% end %>
    </div>
  </div>

  </div>
</div>
